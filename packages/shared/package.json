{
  "name": "shared",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "types/index.ts",
  "exports": {
    ".": {
      "types": "./types/index.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./types/index.ts",
      "import": "./dist/index.js"
    },
    "./types/*": {
      "types": "./types/*.ts",
      "import": "./dist/*.js"
    }
  },
  "scripts": {
    "generate-types": "npx openapi-typescript openapi/spec.yaml -o types/api.ts",
    "build": "npm run generate-types && tsc",
    "dev": "npm run generate-types -- --watch",
    "clean": "rm -rf dist types/api.ts",
    "serve-docs": "node serve-docs.js"
  },
  "devDependencies": {
    "js-yaml": "^4.1.0",
    "openapi-typescript": "^6.7.6",
    "swagger-ui-express": "^5.0.1"
  }
}

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "..",  // Changed from "./src" to ".."
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": "..",  // Changed from "." to ".."
    "paths": {
      "@shared/*": ["shared/*"],  // Updated path
      "@shared/types/*": ["shared/types/*"]  // Updated path
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/types/**/*.d.ts",
    "../shared/**/*.ts"  // Added shared types
  ],
  "exclude": [
    "node_modules", 
    "dist",
    "../frontend/**/*"  // Exclude frontend files
  ]
}